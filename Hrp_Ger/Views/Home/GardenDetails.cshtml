@model Hrp_Ger.Models.BahceModel
@{
    ViewBag.Title = "GardenDetails";
}

    <section class="hero-wrap hero-wrap-2 mobilSection" style="background-image: url('../../Content/images/Adsız1.png');">
        <div class="container">
            
        </div>
    </section>
    
<div class="row">

    <div class="col-md-5">   
       
        <div class="slideshow-container mobilDiv " style="width:90%; padding-top:70px">
            @foreach (var item in Model.Images)
            {
                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">

                    <img src="~/Content/HRP/bahcemobilyaları/@item.Klasor/@item.ImagePath" class="mobilDiv" style="width:80%">

                </div>



                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next mobilnext" onclick="plusSlides(1)">&#10095;</a>
            }
        </div>
    </div>
    <div class="col-md-7">
        <h3 class="text-center">@Model.UrunAdi</h3>
        <table class="table ">

            <tbody>
                <tr>
                    <th>Produktname</th>
                    <td>@Model.UrunAdi</td>
                </tr>
                <tr>
                    <th>Breite</th>
                    <td>@Model.En</td>
                </tr>
                <tr>
                    <th>Länge</th>
                    <td>@Model.Boy</td>
                </tr>
                <tr>
                    <th>Höhe</th>
                    <td>@Model.Yukseklik</td>
                </tr>
                <tr>
                    <th>Materialoptionen</th>
                    <td>@Model.Malzeme</td>
                </tr>
                <tr>
                    <th>Farbenoptionen</th>
                    <td>@Model.Renk</td>
                </tr>
                @if (Model.Doseme != null)
                {
                    <tr>
                        <th>Polsteroptionen (Stoff)</th>
                        <td>@Model.Doseme</td>
                    </tr>
                }

                @if (Model.AhsapKaplama != null)
                {
                    <tr>
                        <th> Holztyp Optionen </th>
                        <td>@Model.AhsapKaplama</td>
                    </tr>
                }
                <tr>
                    <th>Oberflächentypoptionen</th>
                    <td>@Model.YuzeyTipi</td>
                </tr>
                <tr>
                    <th>Reinigung und Pflege</th>
                    <td>@Model.TemizlikveBakim</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


